/**app.wxss**/
@import 'style/weui.wxss';
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.text-center{text-align: center;}
.text-right{text-align: right;}
.p{padding: 0rpx 10rpx 10rpx 20rpx;}
.red{color: #f75e5e;}
.icon-num{
  font-size: 32rpx;
  min-width: 35rpx;
  padding: 0 5rpx;
  height: 40rpx;
  line-height: 40rpx;
  background-color: #2b70ff;
  position: absolute;
  border-radius: 40rpx;
  top: -16rpx;
  right: -24rpx;
  text-align: center;
  color: #fff;
}
.icon{width: 40rpx;height: 40rpx;}
.picker{border: 1px solid #eee;padding: 20rpx 10rpx 20rpx 10rpx;background:url('data:image/png;base64,') right 10rpx bottom 25rpx;background-repeat: no-repeat;background-size: 40rpx;}
.link{color: blue;}
.input{border-bottom: 1rpx solid rgba(0,0,0,.1);padding-left: 5rpx;}
.row{padding-top: 50rpx;}
.no-data{text-align: center;font-size: 12px;color: rgba(0,0,0,.5);}