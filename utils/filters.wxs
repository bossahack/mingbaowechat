
module.exports = {  
  timeFormat: function (date) {
    if(!date)
      return;
    var arr = date.replace('T', ' ').split(':');
    return arr.splice(0, arr.length - 1).join(':');
  },
  getDetailShow:function(items){
    var result="";
    for(var i=0;i<items.length;i++){
      var item=items[i];
      if(i!=0){
        result+="+";
      }
      result += item.FoodName+"("+item.Qty+")";
    }
    return result;
  },
  getStatusDesc:function(status){
    var desc="未知";
    switch (status) {
      case 0:
        desc = "初始";
        break;
      case 10:
        desc = "已接单";
        break;
      case 20:
        desc = "已完成";
        break;
      case 30:
        desc = "已取消";
        break;
      case 40:
        desc = "异常单";
        break;
    }
    return desc;
  }
  
};
