<view class="page">
  
    <view class="page__bd">
        <view class="weui-panel weui-panel_access">
            <view class="weui-panel__hd">今日订单</view>
            <view class="weui-panel__bd">
                <navigator url="/pages/order/order?id={{order.Id}}" class="weui-media-box" hover-class="weui-cell_active"  wx:for="{{orders}}" wx:for-index="index" wx:for-item="order" wx:key="index" >
                    <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                        <view class="weui-flex weui-media-box__title">
                            <view class="weui-flex__item">单号：{{order.TakeCode}}</view>
                            <view >￥{{order.totalPrice}}</view>
                        </view>
                         <view class="weui-flex">
                            <view class="weui-flex__item weui-media-box__desc">{{order.shopName}}</view>
                            <view class="weui-flex__item weui-media-box__desc">{{order.shopAddress}}</view>
                        </view>
                        <view class="weui-media-box__desc">{{order.foodNameShow}}</view>
                    </view>
                </navigator>
                <!-- <navigator url="" class="weui-media-box" hover-class="weui-cell_active">
                    <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                        <view class="weui-flex weui-media-box__title">
                            <view class="weui-flex__item">单号：财1</view>
                            <view >2元</view>
                        </view>
                         <view class="weui-flex">
                            <view class="weui-flex__item weui-media-box__desc">商家名</view>
