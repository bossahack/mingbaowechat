                        </view>
                        <view class="weui-media-box__desc">煎饼果子(1)+豆浆(1)</view>
                    </view>
                </navigator> -->
            </view>
        </view>

        
        <view class="weui-panel weui-panel_access">
            <view class="weui-panel__hd">最近订单</view>
            <view class="weui-panel__bd">
                <view class="weui-media-box weui-media-box_appmsg">
                    <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                        <view class="weui-flex">
                            <view class="weui-flex__item weui-media-box__desc">煎饼果子(1)+豆浆(1)</view>
                            <view class="weui-media-box__desc"><button class="weui-btn mini-btn" type="default" size="mini">再来一份</button></view>
                        </view>
                        <view class="weui-flex">
                            <view class="weui-flex__item weui-media-box__desc">煎饼果子(1)+豆浆(1)</view>
                            <view class="weui-media-box__desc">
                              <button class="weui-btn mini-btn" type="default" size="mini">再来一份</button>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>

        
        <view class="weui-panel weui-panel_access">
            <view class="weui-panel__hd weui-flex">
                  <view class="weui-flex__item">关注店家</view>
                  <view ><button class="weui-btn mini-btn" type="primary" size="mini">扫码关注</button>
              </view>
            </view>
            <view class="weui-panel__bd">
                <view  class="weui-media-box " >
                    <view class="weui-media-box__bd" hover-class="weui-cell_active" bindtap="toShop" data-id="{{shop.Id}}" wx:for="{{shops}}" wx:for-index="index" wx:for-item="shop" wx:key="index">
                        <view class="weui-flex">
                            <view class="weui-flex__item">{{shop.Name}}</view>
                            <view >{{shop.Address}}</view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>